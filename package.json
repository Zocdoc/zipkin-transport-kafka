    "semantic-release": "lerna-semantic-release pre && lerna-semantic-release perform && lerna-semantic-release post"
  },
  "repository": "https://github.com/zocdoc/zipkin-js",
  "publishConfig": {
    "registry": "https://npm.zocdoc-ci.com/"
  },
  "dependencies": {
    "lerna": "^2.11.0",
    "yarn": "^1.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.23.0",
    "chai": "^3.5.0",
    "commitizen": "^2.10.1",
    "cz-lerna-changelog": "^1.2.1",
    "eslint": "^2.10.0",
    "eslint-config-airbnb": "^9.0.0",
    "eslint-plugin-import": "^1.6.0",
    "eslint-plugin-jsx-a11y": "^1.0.2",
    "eslint-plugin-react": "^5.0.1",
    "lerna-semantic-release": "^9.1.0",
    "lolex": "^1.5.1",
    "mocha": "^3.2.0",
    "sinon": "^1.17.6",
    "travis-deploy-once": "^5.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
